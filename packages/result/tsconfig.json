{
  "compilerOptions": {
    "target": "es2022",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "NodeNext",
    "outDir": "build",
    "rootDir": "src",
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true
  }
}
